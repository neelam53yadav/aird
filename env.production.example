# PrimeData Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
DATABASE_URL=postgresql://primedata:YOUR_PASSWORD@YOUR_DB_IP:5432/primedata

# Airflow Database (can use same as main DB)
AIRFLOW_DB_URL=postgresql://primedata:YOUR_PASSWORD@YOUR_DB_IP:5432/airflow

# Cloud Storage (GCS) Configuration
# For GCS, use S3 compatibility mode
MINIO_HOST=storage.googleapis.com
MINIO_ACCESS_KEY=YOUR_GCS_SERVICE_ACCOUNT_KEY
MINIO_SECRET_KEY=YOUR_GCS_SERVICE_ACCOUNT_SECRET
MINIO_SECURE=true

# Service Account Key Path (on VM)
GOOGLE_APPLICATION_CREDENTIALS=/opt/primedata/keys/primedata-storage-key.json

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Application Configuration
FRONTEND_URL=http://YOUR_VM_IP:3000
NEXT_PUBLIC_API_URL=http://YOUR_VM_IP:8000
NEXTAUTH_URL=http://YOUR_VM_IP:3000
CORS_ORIGINS=["http://YOUR_VM_IP:3000"]

# Security
JWT_SECRET_KEY=YOUR_SECURE_JWT_SECRET_KEY_64_CHARS_MIN
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_64_CHARS_MIN
DISABLE_AUTH=false

# Google OAuth (if using)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Airflow Configuration
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=YOUR_AIRFLOW_PASSWORD
AIRFLOW_SECRET_KEY=YOUR_AIRFLOW_SECRET_KEY

