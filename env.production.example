# PrimeData Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
# Option 1: Full DATABASE_URL (simplest - preferred for production)
# Get all values from secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
# DATABASE_URL=postgresql://changeme_user:CHANGE_ME_PASSWORD@YOUR_DB_IP:5432/changeme_db

# Option 2: Individual components (more flexible - allows database name from secrets)
# ⚠️ WARNING: All values must be set from secrets manager!
POSTGRES_USER=changeme_user
POSTGRES_PASSWORD=CHANGE_ME_PASSWORD
POSTGRES_HOST=YOUR_DB_IP
POSTGRES_PORT=5432
POSTGRES_DB=changeme_db

# Airflow Database (can use same as main DB or separate)
# Option 1: Full AIRFLOW_DB_URL
# AIRFLOW_DB_URL=postgresql://changeme_user:CHANGE_ME_PASSWORD@YOUR_DB_IP:5432/changeme_airflow_db

# Option 2: Construct from components (will use same credentials as main DB)
AIRFLOW_DB_NAME=changeme_airflow_db

# Cloud Storage (GCS) Configuration
# For GCS, use S3 compatibility mode
MINIO_HOST=storage.googleapis.com
MINIO_ACCESS_KEY=YOUR_GCS_SERVICE_ACCOUNT_KEY
MINIO_SECRET_KEY=YOUR_GCS_SERVICE_ACCOUNT_SECRET
MINIO_SECURE=true

# Service Account Key Path (on VM)
GOOGLE_APPLICATION_CREDENTIALS=/opt/primedata/keys/primedata-storage-key.json

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Application Configuration
FRONTEND_URL=http://YOUR_VM_IP:3000
NEXT_PUBLIC_API_URL=http://YOUR_VM_IP:8000
NEXTAUTH_URL=http://YOUR_VM_IP:3000
CORS_ORIGINS=["http://YOUR_VM_IP:3000"]

# Security
JWT_SECRET_KEY=YOUR_SECURE_JWT_SECRET_KEY_64_CHARS_MIN
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_64_CHARS_MIN
DISABLE_AUTH=false

# Google OAuth (if using)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Airflow Configuration
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=YOUR_AIRFLOW_PASSWORD
AIRFLOW_SECRET_KEY=YOUR_AIRFLOW_SECRET_KEY







